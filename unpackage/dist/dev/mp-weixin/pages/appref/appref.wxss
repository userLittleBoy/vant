.applyRefund {
	width: 100%;
	/* height: 100vh; */
	background: #f6f6f6;
}

/* 物品 */
.applyRefund .commodity {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-top: 30rpx;
	padding: 23rpx 24rpx;
	background: #fff;
}
.applyRefund .commodity image {
	width: 160rpx;
	height: 160rpx;
	/* background: pink; */
	border-radius: 5rpx;
	margin-right: 37rpx;
}
.applyRefund .commodity .commodity-text {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	font-size: 23rpx;
	padding: 25rpx 0 26rpx;
}
.applyRefund .commodity .commodity-text>view {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.applyRefund .commodity .commodity-text view.text-top text:nth-child(2) {
	color: #d53b31;
	font-size: 26rpx;
	margin-left: 27rpx;
}
.applyRefund .commodity .commodity-text view.text-bottom {
	color: #c1c1c1;
}
.applyRefund .cause,
.applyRefund .refund-price,
.applyRefund .upload {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background: #fff;
	padding: 30rpx 24rpx;
	margin-top: 29px;
	font-size: 26rpx;
	color: #383838;
}

/* 退款原因 */
.applyRefund .cause {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.applyRefund .cause .chooseReason {
	color: #cbcbcb;
}

/* 退款价格 */
.applyRefund .refund-price .hint {
	margin-right: 24rpx;
}
.applyRefund .refund-price .price .money {
	color: #e47b75;
}
.applyRefund .refund-price .explain {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	margin-top: 58rpx;
}
.applyRefund .refund-price .explain input {
	display: inline-block;
}

/* 上传凭证 */
.applyRefund .upload .imgs {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	width: 128rpx;
	height: 128rpx;
	border: 1px dashed #ddd;
	font-size: 20rpx;
}
.applyRefund .upload .imgs .photo {
	width: 44rpx;
	height: 40rpx;
	margin-bottom: 24rpx;
}
.applyRefund .upload .images .img{
	width: 128rpx;
	height: 128rpx;
	margin-right:20rpx;
}
.applyRefund .upload .upload-hint {
	margin-bottom: 30rpx;
}

/* 提交申请 */
.applyRefund .btn {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100vw;
	height: 95rpx;
	font-size: 37rpx;
	color: #fff;
	text-align: center;
	line-height: 95rpx;
	background: #dc3026;
	border-radius: 0;
}
.applyRefund .cause-select {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	width: 100vw;
	padding: 27rpx 24rpx 0;
}
.applyRefund .cause-select .cause-title {
	margin-bottom: 56rpx;
	text-align: center;
	font-size: 30rpx;
}
.applyRefund .cause-select .mores radio-group {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	color: #383a3a;
}
.applyRefund .cause-select .mores radio-group label {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	height: 86rpx;
	width: 100%;
	line-height: 83rpx;
	font-size: 26rpx;
	border-bottom: 1rpx solid #bebebe;
}
.applyRefund .cause-select .mores radio-group label:last-child {
	border: none;
}
.applyRefund .close {
	width: 100vw;
	height: 85rpx;
	background: #dc3025;
	margin-top: 30rpx;
	font-size: 38rpx;
	color: #fff;
	text-align: center;
	line-height: 85rpx;
}

