/* 订单 */
.order {
	width: 100%;
	margin-bottom: 120rpx;
	background: #f5f5f5;
	overflow: hidden;
}
/* 收货地址 */
.order-header {
	width: 100%;
	height: 110rpx;
	/* line-height: 110rpx; */
	font-size: 30rpx;
	background: #fff;
	margin-top: 2rpx;
}
/* 没有选择地址样式 */
.order-header .oldLocation {
	height:100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.order-header .oldLocation .location {
	left: 0;
	margin-left: 39rpx;
	margin-right: 38rpx;
	font-size: 40rpx;
}
.chooseAdd{
	margin-left: -50%;
}
.order-header .oldLocation .arrow {
	opacity: .5;
	margin-right: 28rpx;
}
/* 选择地址样式 */
.newLocation {
	height: 110rpx;
	padding:0 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.userInfo{
	height: 100%;
	width: 70%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-justify-content: space-around;
	    -ms-flex-pack: distribute;
	        justify-content: space-around;
}
.userInfo text{
	padding: 0;
	font-size: 24rpx;
}
/* 彩条 */
.Colorbar {
	background: #fff;
	height: 4rpx;
	min-height: 4rpx;
}
.Colorbar image {
	display: block;
}
/* 商品详情 */
.order-content {
	width: 100%;
}
/* 商品 */
.order-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 53rpx 26rpx;
	background: #fff;
	margin-bottom: 10rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
/* 商品图片 */
.order-item image {
	width: 180rpx;
	height: 180rpx;
	margin-right: 12rpx;
	margin-bottom: 10rpx;
	border-radius: 10rpx;
}
.order-item .order-item-content {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.order-item .order-item-content text {
	display: block;
}
/* 商品名称 */
.order-item .order-item-content .goods_name {
	width: 400rpx;
	margin-bottom: 18rpx;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
	font-size: 34rpx;
}
/* 商品颜色 */
.order-item .order-item-content .short_name {
	width: 400rpx;
	margin-bottom: 94rpx;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
	font-size: 28rpx;
}
/* 多少件 */
.order-item .order-item-content .count {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	float: right;
	margin-right: 25rpx;
}
.Pirce {
	font-size: 26rpx;
	color: #999;
	margin-right: 25rpx;
}
.unitPrice {
	font-size: 26rpx;
	color: #333;
}
/* 优惠劵 */
.Coupon {
	width: 100%;
	height: 73rpx;
	line-height: 73rpx;
	background: #fff;
	font-size: 26rpx;
	margin-bottom: 10rpx;
}
.Coupon-text {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.Coupon-text .left {
	margin-left: 23rpx;
	color: #333;
}
.Coupon-text .right {
	margin-right: 23rpx;
	color: #999;
}
.Coupon-text .right .arrow {
	margin-left: 21rpx;
}
/* 商品总额 */
.price-box {
	width: 100%;
	background: #fff;
	margin-bottom: 10rpx;
}
.price,
.Freight {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	height: 30rpx;
	font-size: 26rpx;
	padding: 24rpx 0;
}
.text {
	margin-left: 23rpx;
}
.TotalCost {
	margin-right: 23rpx;
}
.FreightPrice {
	margin-right: 23rpx;
}
/* 留言 */
.leaveComments {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	width: 100%;
	background: #fff;
	font-size: 26rpx;
	padding: 24rpx 0;
	margin-bottom: 10rpx;
}
.leaveComments .text{
	margin-right: 40rpx;
}
.content {
	margin-left: 62rpx;
	color: #999;
}
/* 微信支付 */
.Pay {
	width: 100%;
	background: #fff;
}
/* 购物车 */
.shopping {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 117rpx;
	line-height: 117rpx;
	background: #fff;
	-webkit-box-shadow: 1rpx 2rpx 2rpx 1rpx #ddd;
	        box-shadow: 1rpx 2rpx 2rpx 1rpx #ddd;
	z-index: 100;
}
.shoppingBottom {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	font-size: 36rpx;
}
.left {
	margin-left: 23rpx;
}
.left .TotalCost {
	font-size: 28rpx;
}
.left .red {
	color: #e01616;
}
.right {
	padding-right: 30rpx;
}
.right .Settlement {
	width: 150rpx;
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 12rpx;
	background: #e01616;
	font-size: 30rpx;
	color: #fff;
	padding: 0;
}
.van-popup {
	width: 702rpx;
	height: 500rpx;
	border-radius: 12rpx
}
.dialog-index--van-dialog {
	width: 702rpx;
	height: 340rpx;
}
.value-class {
	-webkit-box-flex: 0 !important;
	-webkit-flex: none !important;
	    -ms-flex: none !important;
	        flex: none !important;
}

