/* 全选按钮 */
.shoppingLeft .iconfont {
	margin-left: 24rpx;
	margin-right: 32rpx;
}
.shoppingLeft .text {
	font-size: 30rpx;
}
.shoppingRight {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-align-content: center;
	    -ms-flex-line-pack: center;
	        align-content: center;
}
.shoppingRight .TotalCost {
	font-size: 36rpx;
	color: #e01616;
	margin-right: 23rpx;
}
.shoppingRight .Settlement {
	width: 150rpx;
	height: 70rpx;
	line-height: 70rpx;
	background: #dc3025;
	color: #fff;
	margin-right: 27rpx;
	margin-top: 20rpx;
	border-radius: 12rpx;
	-webkit-box-shadow: 1rpx 4rpx 12rpx 1rpx rgba(164, 215, 139, 0.29);
	        box-shadow: 1rpx 4rpx 12rpx 1rpx rgba(164, 215, 139, 0.29);
	font-size: 30rpx;
}

