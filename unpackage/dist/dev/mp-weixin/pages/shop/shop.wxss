.shop {
	width: 100%;
}

/* 购物车包裹 */
.shop-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	width: 100%;
}

/* 空购物车 */
.shop-empty {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	width: 100vw;
	height: 100vh;
}
.shop-empty view {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}

/* 图片 */
.shop-empty view image {
	width: 284rpx;
	height: 170rpx;
}

/* 提示文本*/
.shop-empty view .empty {
	width: 100%;
	font-size: 30rpx;
	color: #999;
	margin-top: 49rpx;
	text-align: center;
}

/* 去逛逛按钮 */
.shop-empty .btn {
	width: 202rpx;
	height: 78rpx;
	line-height: 78rpx;
	margin-top: 58rpx;
	background-color: #278c58;
	border-radius: 14rpx;
	font-size: 26rpx;
	color: #fff;
}

/* 购物车有内容 */
.shop-Valued {
	width: 100%;
	height: 100%;
	padding-bottom: 8rpx;
	margin-bottom: 120rpx;
	background: #f7f7f7;
}

/* 每一个商品 */
.shop-item {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	width: 100%;
	margin-bottom: 20rpx;
	padding: 57rpx 24rpx 52rpx 24rpx;
	-webkit-box-shadow: 0 1rpx 2rpx 0 raba(0, 0, 0, 0.06) inset rgba(225, 228, 228, 0.35);
	        box-shadow: 0 1rpx 2rpx 0 raba(0, 0, 0, 0.06) inset rgba(225, 228, 228, 0.35);
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background: #fff;
}

/* 商品是否选中 */
.shop-item .iconfont {
	font-size: 48rpx;
	color: #278c58;
	margin-right: 33rpx;
}

/* 商品图片 */
.shop-item image {
	display: inline-block;
	width: 180rpx;
	height: 180rpx;
	border-radius: 5rpx;
	margin-right: 29rpx;
}

/* 商品详细信息 */
.item-content {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	height: 180rpx;
	font-size: 34rpx;
	color: #333;
	overflow: hidden;
}

/* 商品名称和颜色共同样式 */
.goods_name,
.short_name {
	display: block;
	width: 200rpx;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}

/* 商品名称 */
.goods_name {
	margin-bottom: 21rpx;
}

/* 商品颜色 */
.short_name {
	margin-bottom: 48rpx;
	font-size: 28rpx;
	color: #afafaf;
}

/* 商品价格 */
.market_price {
	display: block;
	font-size: 26rpx;
	color: #df0000;
}

/* 商品数量 */
.Products {
	position: absolute;
	right: 24rpx;
	bottom: 46rpx;
	width: 160rpx;
	height: 32rpx;
	background: #fdd;
}
.number {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 100%;
	font-size: 24rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	text-align: center;
}
.number .add,
.number .remove {
	width: 46rpx;
	height: 32rpx;
	background: #fffdfe;
	border-radius: 4rpx 1rpx 1rpx 4rpx;
	border: 1rpx solid #e7e7e7;
}
.number input {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	height: 32rpx;
	min-height: 32rpx;
	line-height: 32rpx;
	border: 1rpx solid #e7e7e7;
	border-left: 0;
	border-right: 0;
	background: #fffdfe;
}

/* 删除商品 */
.delete {
	position: absolute;
	right: 24rpx;
	top: 67rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	width: 100rpx;
	height: 180rpx;
	background: #f7f7f7;
	border-radius: 10rpx;
}
.delete .iconfont {
	font-size: 43rpx;
	color: #ddd;
	padding: 48rpx 25rpx 0 31rpx;
}
.delete .text {
	font-size: 28rpx;
	text-align: center;
	margin-top: 21rpx;
}

