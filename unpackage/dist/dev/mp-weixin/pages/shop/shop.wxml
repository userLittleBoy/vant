<view><view class="shop"><view class="shop-box"><block wx:if="{{!productList.length}}"><view class="shop-empty"><view><image src="http://m.qpic.cn/psb?/V11CTl4R4bvwTh/ucAC1mFOJE5l1oGkcG76jDDJpQcwGZl6GUYS*if0RYI!/b/dL4AAAAAAAAA&bo=jgBVAAAAAAADF.k!&rf=viewer_4"></image><text class="empty">购物车是空的~</text></view><button data-event-opts="{{[['tap',[['goAround',['$event']]]]]}}" class="btn" bindtap="__e">去逛逛</button></view></block><block wx:if="{{productList.length}}"><view class="shop-Valued"><block wx:for="{{productList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="shop-item" data-index="{{index}}"><text class="{{[item.check?'iconfont icon-xuanzhong-copy':'iconfont icon-xuanzhongyuandian']}}" data-index="{{index}}" data-event-opts="{{[['tap',[['check',['$event']]]]]}}" bindtap="__e"></text><image src="{{item.goods_thumb}}" data-id="item.id"></image><view class="item-content"><text class="goods_name">{{item.goods_name}}</text><text class="short_name">{{item.goods_attr_str}}</text><text class="market_price">{{"￥"+item.goods_number*item.shop_price}}</text></view><block wx:if="{{!item.check}}"><view class="Products"><view class="number"><view class="remove" data-index="{{index}}" data-event-opts="{{[['tap',[['cutBack',['$event']]]]]}}" bindtap="__e">-</view><input placeholder="{{item.goods_number}}" disabled="true" data-event-opts="{{[['input',[['bindKeyInput',['$event']]]]]}}" bindinput="__e"/><view class="add" data-index="{{index}}" data-event-opts="{{[['tap',[['add',['$event']]]]]}}" bindtap="__e">+</view></view></view></block><block wx:if="{{item.check}}"><view class="delete" data-index="{{index}}" data-event-opts="{{[['tap',[['remove',['$event']]]]]}}" bindtap="__e"><text class="iconfont icon-shanchu"></text><text class="text">删除</text></view></block></view></block><view class="shopping"><view class="shoppingBottom"><view class="shoppingLeft"><text class="{{['selectAll',!allChecked?'iconfont icon-xuanzhongyuandian':'iconfont icon-xuanzhong-copy']}}" data-index="index" data-event-opts="{{[['tap',[['allCheck',['$event']]]]]}}" bindtap="__e"></text><text class="text">全选</text></view><view class="shoppingRight"><text class="TotalCost">{{"￥"+totalPrice}}</text><button data-event-opts="{{[['tap',[['settlement',['$event']]]]]}}" class="Settlement" bindtap="__e">去结算</button></view></view></view></view></block></view></view></view>